-#  This file is app/views/movies/search_tmdb.html.haml
%h1 All Movies

= form_tag url_for(:controller => 'movies', :action => 'add_tmdb'), :method => :post, :id => 'ratings_form' do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Add Movie
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie[:title] 
          %td= movie[:rating]
          %td= movie[:release_date]
          %td= check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]", :id => "checkbox_#{movie[:tmdb_id]}"

  = submit_tag 'Add Selected Movies', :id => 'movies_button'